#!/bin/sh

# Pre-commit hook for Mingot
# Runs formatting check, linting, and tests before allowing commit

set -e

echo "ğŸ” Running pre-commit checks..."

# Check formatting
echo "ğŸ“ Checking code formatting..."
if ! cargo fmt -- --check; then
    echo "âŒ Code formatting check failed!"
    echo "ğŸ’¡ Run 'cargo fmt' to fix formatting issues"
    exit 1
fi
echo "âœ… Formatting check passed"

# Run clippy
echo "ğŸ” Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy found issues!"
    echo "ğŸ’¡ Fix the issues above before committing"
    exit 1
fi
echo "âœ… Clippy check passed"

# Run tests
echo "ğŸ§ª Running tests..."
if ! cargo test --lib; then
    echo "âŒ Tests failed!"
    echo "ğŸ’¡ Fix failing tests before committing"
    exit 1
fi
echo "âœ… All tests passed"

echo "âœ¨ All pre-commit checks passed! Proceeding with commit..."
